<h1>My Profile</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Name</th>
      <th>Company</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @user.username %></td>
        <td><%= @user.name %></td>
        <td><%= @user.company %></td>
        <td><%= @user.email %></td>
      </tr>
  </tbody>
</table>

  <% if current_user == @user %>
    <%= link_to "Edit My Profile", edit_user_registration_path %>
  <% end %>
