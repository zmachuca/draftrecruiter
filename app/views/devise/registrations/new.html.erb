<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Sign up</h1>
  </div>

  <div class="panel-body">
    
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
       <%= f.label :username, 'Username:' %> <i>(<u>Only your Username is visible to others</u>)</i>
       <%= f.text_field :username, class: "form-control", :autofocus => true %>
     </div>

      <div class="form-group">
       <%= f.label :first_name, 'First Name:' %>
       <%= f.text_field :first_name, class: "form-control", :autofocus => true %>
     </div>

     <div class="form-group">
       <%= f.label :last_name, 'First Name:' %>
       <%= f.text_field :last_name, class: "form-control", :autofocus => true %>
     </div>

     <div class="form-group">
        <%= f.label :company, 'Company:' %>
        <%= f.select :company, ['- Please Select -', 'ACA Talent', 'Aerotek', 'AlphaStaff', 'Centra Healthcare Solutions', 'The Execu|Search Group', 'Human Capital Management', 'Spherion', 'Staffmark', 'Synerfac Technical Staffing', 'TekPartners', 'Freelance'], class: "form-control", :autofocus => true %>
    </div>

      <div class="form-group">
        <%= f.label :email, 'Email Address:' %> <i>(<u>Must use company email</u>)</i>
        <%= f.email_field :email, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password:' %>
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>