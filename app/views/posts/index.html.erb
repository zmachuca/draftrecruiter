<%= render 'pages/home' unless user_signed_in? %>

<h1>Job Postings</h1>

<table>
  <thead>
    <tr>
      <th>Job Title:</th>
      <th>Requirements:</th>
      <th>Industry:</th>
      <th>Location:</th>
      <th>User:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.requirement %></td>
        <td><%= post.industry %></td>
        <td><%= post.location %></td>
        <td><%= post.user.username if post.user %></td>
        <td><%= link_to 'Show', post %></td>
        <% if post.user == current_user %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Post a New Job', new_post_path %>
