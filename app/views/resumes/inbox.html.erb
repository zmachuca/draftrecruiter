<div class="container">
	<h1>You have <%= current_user.incoming_resumes.count %> Resumes in your Inbox:</h1>
	<h3><i>You currently have <%= current_user.credits %> Credit(s) remaining...</i></h3>
	<div class="job-results">
	  <div class="job-list card">
	    <div class="sorting-options">
					<% @resumes.each do |resume| %>
						<h3 class="job-title"> <%= resume.post.title %> </h3>
						<p> <%= link_to resume.document_file_name, resume_path(resume), :target => "_blank" %> </p>
						<p> Received: <%= resume.created_at.strftime("%A, %b %d, %Y") %> </p>
						<% if current_user.unlocked_resumes.include?(resume) %><h4><i>Opened</i></h4> <% end %>
						<p><%= link_to 'Delete', resume, method: :delete, data: { confirm: 'Are you sure?' } %></p>
					<% end %>
			</div>
		</div>
	</div>
</div>